<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>
<body>
<!--start: MENU -->
<%- include('menu') -%>
<!--end: MENU -->
<!-- start: content -->
<div class="container" style="margin-top: 60px ">
	<div class="row">
		<div class="col-md-push-12 col-md-10 col-xs-12 text-left">
			<h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
		</div>
		<div class="col-md-push-3 col-md-6 col-xs-12">
			<form>
				<div class="form-group">
					<label for="loginname">Name</label>
					<input type="text" class="form-control" id="loginname">
					<label for="loginusername">Username</label>
					<input type="text" class="form-control" id="loginusername">
					<label for="loginpw">Password</label>
					<input type="password" class="form-control" id="loginpw">
					<div class="checkbox mb-10">
						<label>
							Female <input type="checkbox" id="loginfemale">
						</label>
						<label>
							Male <input type="checkbox" id="loginmale">
						</label>
					</div>
				</div>
				<div class="form-group">
					<a href="tasks" class="btn-lg btn-primary btn-block text-center">Registration</a>
				</div>
				<div class="form-group">
					<a href="index" class="btn-lg btn-secondary btn-block text-center">Back</a>
				</div>
			</form>
		</div>
	</div>
</div>
<!-- end: content -->

<script src="js/bootstrap.js"></script>
</body>
</html>