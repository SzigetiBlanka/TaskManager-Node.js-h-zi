<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>
<body>
<!--start: MENU -->
<%- include('menu') -%>
<!--end: MENU -->
<!-- start: content -->
<div class="container" style="margin-top: 60px ">
	<div class="row">
		<div class="col-md-push-12 col-md-10 col-xs-12 text-left">
			<h1 class="h3 mb-3 font-weight-normal">Edit task</h1>
		</div>
		<div class="col-md-push-3 col-md-6 col-xs-12">
			<form>
				<div class="form-group">
					<label for="taskname">Task Name</label>
					<input type="text" class="form-control" id="taskname">
					<label for="taskdesc">Description</label>
					<input type="text" class="form-control" id="taskdesc">
					<label for="taskpriority">Priority</label>
					<select id="taskpriority" class="form-control">
						<option>Low</option>
						<option>Medium</option>
						<option>High</option>
						<option>neverdoitplease</option>
					</select>
					<label for="taskcat">Category</label>
					<input type="text" class="form-control" id="taskcat">
					<label for="tasktime">Time</label>
					<input type="text" class="form-control" id="tasktime">
				</div>
				<div class="form-group">
					<a href="tasks.ejs" class="btn btn-primary">Save</a>
					<a href="tasks.ejs" class="btn btn-default btn-danger">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>
<!-- end: content -->

<script src="js/bootstrap.js"></script>

</body>
</html>