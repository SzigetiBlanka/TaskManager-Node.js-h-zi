<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>
<body>
<!--start: MENU -->
<%- include('menu') -%>
<!--end: MENU -->

<!-- start: content -->
<div class="container" style="margin-top: 60px ">
	<div class="row">
		<div class="col-md-push-12 col-md-10 col-xs-12 text-left">
            <h2>Profil -
                <% if (typeof user === 'undefined') { %>
                    create
                <% }else{ %>
                    edit
                <% } %>
            </h2>
		</div>
		<div class="col-md-push-3 col-md-6 col-xs-12">
			<form  method="POST">
				<div class="form-group">
					<label for="username">Username</label>
					<input type="text" class="form-control" id="username"  value="<%= (typeof user === 'undefined') ? '' : user.name %>">
                    <label for="sex">Sex</label>
                    <input type="text" class="form-control" id="sex"  value="<%= (typeof user === 'undefined') ? '' : user.sex %>">
                    <label for="admin">Admin</label>
                    <input type="text" class="form-control" id="admin"  value="<%= (typeof user === 'undefined') ? '' : user.admin %>">
				</div>
				<div class="form-group">
					<a href="tasks" class="btn btn-primary">Save</a>
					<a href="tasks" class="btn btn-default btn-danger">Cancel</a>
			</form>
		</div>
	</div>
</div>
<!-- end: content -->
</body>
</html>